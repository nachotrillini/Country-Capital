@page
@model PaisCap.Pages.Paises.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="text-secondary">Details of: @Html.DisplayFor(m => m.Pais.Nombre)</h2>

            <ul class="list-group">
                <li class="list-group-item">ID: @Html.DisplayFor(m => m.Pais.Id)</li>
                <li class="list-group-item">Name: @Html.DisplayFor(m => m.Pais.Nombre)</li>
                <li class="list-group-item">Capital City: @Html.DisplayFor(m => m.Pais.Capital)</li>
            </ul>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <a asp-page="Index" class="btn btn-outline-success">Return</a>
        </div>
    </div>
</div>